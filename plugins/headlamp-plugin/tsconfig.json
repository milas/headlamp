{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "outDir": "./dist/",
      "declaration": true,
      "declarationDir": "./dist/",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "noFallthroughCasesInSwitch": true,
      "emitDeclarationOnly": false
    },
    "exclude": [
      "./lib/components/TestHelpers/**/*",
      "./lib/plugin/index.ts",
      "./lib/plugin/headlamp-plugin/**/*"
    ],
    "include": [
      "./lib/*.ts",
      "./lib/lib/**/*",
      "./lib/plugin/**/*",
      "./lib/react-app-env.d.ts"
    ]
  }
  